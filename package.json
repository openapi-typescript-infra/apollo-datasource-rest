{
  "name": "@openapi-typescript-infra/apollo-datasource-rest",
  "version": "1.0.0",
  "description": "Use openapi-typescript types with apollo-datasource-rest",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "author": "Max Metral <developers@pyralis.com>",
  "license": "MIT",
  "packageManager": "yarn@3.6.1",
  "config": {
    "coconfig": "@openapi-typescript-infra/coconfig"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/openapi-typescript-infra/apollo-datasource-rest.git"
  },
  "keywords": [
    "typescript",
    "openapi",
    "apollo",
    "graphql"
  ],
  "release": {
    "branches": [
      "main"
    ]
  },
  "devDependencies": {
    "@apollo/utils.keyvaluecache": "^1.0.1",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@openapi-typescript-infra/coconfig": "^3.2.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "apollo-datasource-rest": "^3.7.0",
    "coconfig": "^0.12.2",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.3",
    "graphql": "^15.8.0",
    "jest": "^29.6.1",
    "pinst": "^3.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "test": "make && tsc -p tsconfig.json --noEmit && jest",
    "lint": "eslint .",
    "build": "tsc -p tsconfig.build.json",
    "watch": "tsc -p tsconfig.json -w --preserveWatchOutput",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "clean": "npx rimraf ./build",
    "prepublishOnly": "yarn build",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "postinstall": "coconfig"
  },
  "peerDependencies": {
    "apollo-datasource-rest": ">=3.7.0",
    "graphql": ">15.0.0"
  },
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    "@semantic-release/npm",
    "@semantic-release/git"
  ]
}
